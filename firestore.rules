rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ====================================
    // LOCATIONS COLLECTION
    // ====================================
    // Public read access for all users
    // Only admins can write (managed via Firebase Console)
    match /locations/{locationId} {
      allow read: if true;  // Anyone can view locations
      allow write: if false;  // Prevent client-side writes
    }
    
    // ====================================
    // CATEGORIES COLLECTION
    // ====================================
    // Public read, admin-only write
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false;  // Managed via Firebase Console only
    }
    
    // ====================================
    // PRODUCTS COLLECTION
    // ====================================
    // Public read, admin-only write
    match /products/{productId} {
      allow read: if true;
      allow write: if false;  // Managed via Firebase Console only
    }
    
    // ====================================
    // ORDERS COLLECTION
    // ====================================
    // Users can only access their own orders
    match /orders/{orderId} {
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow update: if false;  // Users cannot update orders
      allow delete: if false;  // Users cannot delete orders
    }
    
    // ====================================
    // USERS COLLECTION
    // ====================================
    // Users can only access their own data
    match /users/{userId} {
      allow create: if request.auth != null && 
                       request.auth.uid == userId;
      allow read: if request.auth != null && 
                     request.auth.uid == userId;
      allow update: if request.auth != null && 
                       request.auth.uid == userId;
      allow delete: if false;  // Prevent user deletion from client
    }
    
    // ====================================
    // FAVORITES COLLECTION
    // ====================================
    // Users can only access their own favorites
    match /favorites/{userId} {
      allow read, write: if request.auth != null && 
                           request.auth.uid == userId;
    }
  }
}
